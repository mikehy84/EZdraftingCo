<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | EZDrafting Co.</title>

    <meta name="description"
          content="EZDrafting Co. specializes in structural steel detailing, providing precise shop drawings and 3D modeling using Tekla Structures, SolidWorks, Revit, and AutoCAD. We collaborate with fabricators, engineers, and architects to ensure accuracy, efficiency, and seamless project execution." />
    <meta property="og:locale" content="fa_IR" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Home Page" />
    <meta property="og:url" content="https://ezdraftingco.com/" />
    <meta property="og:site_name" content="EZDRAFTING" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EZD_WEB.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Russo+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=Russo+One&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <partial name="Header/_Navbar" />
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <partial name="Footer/_Footer" />
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
